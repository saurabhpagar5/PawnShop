@model PawnShop.Models.User;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/RegLog.cshtml";
}


<form asp-action="Register" method="post">
 
    <div class="form">
        <div class="title">Welcome</div>
        <div class="subtitle">Let's create your account!</div>

        <div class="input-container ic2">
            <input placeholder="Enter your Name" type="text" class="input" id="name" name="Name" asp-for="Name" required>
            <div class="cut"></div>
            <!--  <label class="iLabel" for="name">name</label> -->
        </div>

        <div class="input-container ic1">
            <input placeholder="Enter Your Email" type="email" class="input" id="email" name="Email" asp-for="Email" required>
            <div class="cut"></div>
            <!-- <label class="iLabel" for="email">Email</label>  -->
        </div>

        <div class="input-container ic2">
            <input placeholder="Enter Password" type="password" class="input" id="password" name="Password" asp-for="Password" required>
            <div class="cut"></div>
            <!-- <label class="iLabel" for="password">Password</label>-->
        </div>
        <div class="input-container ic2">
            <input placeholder="Enter Contact no." type="text" class="input" id="phone"  name="Phone" asp-for="Phone" required>
            <div class="cut cut-short"></div>
            <!--<label class="iLabel" for="phone">Phone</label> -->
        </div>
        <div class="input-container ic2">
            <input placeholder="Enter Address" type="text" class="input" id="address" name="Address" asp-for="Address" required>
            <div class="cut cut-short"></div>
            <!--<label class="iLabel" for="address">Address</label> -->
        </div>
        <button class="submit" asp-controller="Login" asp-action="Register" type="submit">submit</button>
    </div>
</form>

