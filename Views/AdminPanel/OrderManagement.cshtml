@model IEnumerable<PawnShop.Models.Order>

@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Views/Shared/Admin_Header_Footer.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
</head>
    <div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4">
                <h2>Order Management</h2>
            </div>
        </div>
    </div>

    <div class="navbar-nav mr-auto py-0">
        <a href="@Url.Action("Create", "Orders")" class="nav-item nav-link">Add New Order</a>
    </div>
    
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0" style="width:auto">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Order_ID</th>
                        <th>User</th>
                        <th>Order_Date</th>
                        <th>Shipping Address</th>
                        <th>Status</th>
                        <th>Total_Amount</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.OrderId</td>
                        <td class="align-middle">@order.User</td>
                        <td class="align-middle">@order.OrderDate?.ToString("d")</td>
                        <td class="align-middle">@order.ShippingAddress</td>
                        <td class="align-middle">@order.OrderStatus</td>
                        <td class ="align-middle">@order.TotalAmount.ToString("C")</td>
                            <td>
                                <div class="card">
                                    <div class="card-actions">
                                        <div class="action edit">
                                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                            </svg>

                                             <a asp-controller="Orders" asp-action="Edit" asp-route-id="@order.OrderId" class="button-text">Edit</a>
                                        </div>
                                        <div class="action delete">
                                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                                <line x1="14" y1="11" x2="14" y2="17"></line>
                                            </svg>
                                              <form asp-controller="Orders" asp-action="Delete" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@order.OrderId" />
                                                <button class="button-text">Delete</button>
                                              </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
