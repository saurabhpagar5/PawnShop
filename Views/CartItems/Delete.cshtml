@model PawnShop.Models.CartItem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Customer.cshtml";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Shopping Cart</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-controller="CustomerPanel" asp-action="Index">Shopping Cart</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Delete</p>
        </div>
    </div>
</div>
<!-- Page Header End -->


<h3 style="text-align:center">Are you sure you want to delete this?</h3>
<div class="container mt-4 p-4 border rounded shadow-sm bg-light">
    <dl class="row">
        <!-- Product Name -->
        <dt class="col-sm-3 font-weight-bold">
            Product Name
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <!-- Quantity -->
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <!-- Added Date -->
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AddedDate)
        </dd>

      @*   <!-- Cart -->
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Cart)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cart.CartId)
        </dd>

        <!-- Product -->
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Product.ProductId)
        </dd> *@
    </dl>

    <hr />

    <!-- Form Actions -->
    <div class="d-flex justify-content-between mt-4">
        <form asp-action="Delete" class="mb-0">
            <input type="hidden" asp-for="CartItemId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

